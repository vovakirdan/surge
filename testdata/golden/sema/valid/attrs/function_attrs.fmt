// Valid function attributes

// @pure - function has no side effects
@pure
fn add(x: int, y: int) -> int {
    return x + y;
}

// @overload - multiple signatures
fn process(x: int) -> int {
    return x * 2;
}

@overload
fn process(x: int, y: int) -> int {
    return x + y;
}

