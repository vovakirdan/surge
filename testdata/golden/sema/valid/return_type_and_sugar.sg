fn maybe_returnV1() -> Option<int> {
    return Some(1);
}

fn maybe_returnV2() -> Option<int> {
    return 1; // should be auto wrapped to Some(1) in clear context
}

fn maybe_returnV3() -> int? { // int? means Option<int>
    return 1; // should be auto wrapped to Some(1) in clear context
}

