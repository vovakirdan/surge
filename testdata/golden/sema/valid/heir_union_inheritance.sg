// Test: `heir` supports struct extension, aliases, and union members.

tag SomeInt(int);

type Base = { x: int };

type Child = Base : { y: int };

type AliasInt = int;

type Mixed = SomeInt(int) | int;

fn test_heir() {
    let a: bool = Child heir Base;
    let b: bool = AliasInt heir int;
    let c: bool = own Child heir Base;
    let d: bool = int heir Mixed;
    let e: bool = nothing heir Mixed;

    let _ = a;
    let _ = b;
    let _ = c;
    let _ = d;
    let _ = e;
}
