// Valid: Task passed to function (ownership transfer)
// When a Task<T> is passed as argument, caller transfers ownership to callee

async fn compute() -> int {
    return 42;
}

// Async function that receives and awaits a task
async fn drain_task(t: Task<int>) -> int {
    return compare t.await() {
        Success(v) => v;
        Cancelled() => 0;
    };
}

// Valid: task passed to drain, then await drainer
pub async fn test_pass_and_await_drainer() -> int {
    let t = task compute();
    let drainer = task drain_task(t);  // ownership of 't' transferred to drain_task
    return compare drainer.await() {
        Success(v) => v;
        Cancelled() => 0;
    };
}

// Valid: direct task passed without intermediate binding
pub async fn test_direct_pass() -> int {
    let drainer = task drain_task(task compute());
    return compare drainer.await() {
        Success(v) => v;
        Cancelled() => 0;
    };
}

// Valid: multiple tasks passed to different functions
async fn sum_tasks(t1: Task<int>, t2: Task<int>) -> int {
    let v1: int = compare t1.await() {
        Success(v) => v;
        Cancelled() => 0;
    };
    let v2: int = compare t2.await() {
        Success(v) => v;
        Cancelled() => 0;
    };
    return v1 + v2;
}

pub async fn test_multiple_pass() -> int {
    let a = task compute();
    let b = task compute();
    let summer = task sum_tasks(a, b);  // both a and b transferred
    return compare summer.await() {
        Success(v) => v;
        Cancelled() => 0;
    };
}
