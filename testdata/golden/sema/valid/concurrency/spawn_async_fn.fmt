// Testing spawn with async function calls

async fn compute(x: int) -> int {
    return x * 2;
}

async fn process(data: string) -> bool {
    return true;
}

// spawn async fn call -> Task<T>
pub async fn test_spawn_async_fn() {
    let t1: Task<int> = spawn compute(42);
    let result1: int = t1.await();

    let t2: Task<bool> = spawn process("hello");
    let result2: bool = t2.await();
}

// spawn from sync function returning Task
pub fn sync_fn_spawn_async() -> Task<int> {
    return spawn compute(100);
}
