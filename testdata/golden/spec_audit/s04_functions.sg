// ยง4.1 Function Declarations Audit

fn add(a: int, b: int) -> int {
    return a + b;
}

fn no_return() {
    print("no return type = nothing");
}

fn with_nothing_return() -> nothing {
    return nothing;
}

fn join(...args: string) -> string {
    let mut out: string = "";
    let mut i: int = 0;
    let n: int = args.__len() to int;
    while i < n {
        if i > 0 {
            out = out + "|";
        }
        let part: string = args[i];
        out = out + part;
        i = i + 1;
    }
    return out;
}

