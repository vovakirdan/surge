        let i = 0;
        while i < 3 {
            print("B");
            checkpoint().await();
            i = i + 1;
        }
        return 0;
    };
    let c = task async {
        let i = 0;
        while i < 3 {
            print("C");
            checkpoint().await();
            i = i + 1;
        }
